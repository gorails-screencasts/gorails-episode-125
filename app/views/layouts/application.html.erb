<!DOCTYPE html>
<html>
  <head>
    <title>Notifications</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-default navbar-static-top" role="banner">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gorails-navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_url, class: "navbar-brand" do %>
            Notifications
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <nav id="gorails-navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          </ul>

          <ul class="nav navbar-nav navbar-right">

            <% if user_signed_in? %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Login", new_user_session_path(redirect_to: request.path) %></li>
              <li><p class="navbar-btn"><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %></p></li>
            <% end %>
          </ul>
        </nav><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </header>

    <%= yield %>
  </body>
</html>
